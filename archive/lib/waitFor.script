// Wrap around an action that launches a daemon, to wait for the daemon's completion

function waitFor(daemonArgs) {
	disableLog("sleep")
	tprint("Waiting for completion of ", daemonArgs[0], " on ", daemonArgs[1])
	print("Waiting for completion of ", daemonArgs[0], " on ", daemonArgs[1])
	while(scriptRunning.apply(null, daemonArgs)) {
		sleep(1000)
	}
}